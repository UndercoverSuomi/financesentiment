# App
APP_NAME=FinanceSentiment
ENVIRONMENT=dev

# Backend
DATABASE_URL=sqlite:///./backend/data/app.db
FRONTEND_ORIGIN=http://localhost:3000
FRONTEND_ORIGINS_CSV=http://localhost:3000,http://127.0.0.1:3000

# Reddit ingestion
SUBREDDITS_CSV=StockMarket,wallstreetbetsGER,ValueInvesting,Finanzen,wallstreetbets,stocks,investing,Aktien
PULL_SORT=top
PULL_T_PARAM=day
PULL_LIMIT=20
PULL_MAX_PAGES=1
REDDIT_BASE_URL=https://oauth.reddit.com
REDDIT_USE_OFFICIAL_API=true
REDDIT_OAUTH_TOKEN_URL=https://www.reddit.com/api/v1/access_token
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_OAUTH_SCOPE=read
REDDIT_USER_AGENT=financesentiment/0.1 (contact: email_or_repo)
REDDIT_TIMEOUT_CONNECT=3
REDDIT_TIMEOUT_READ=20
REDDIT_MAX_CONCURRENCY=1
REDDIT_MAX_REQUESTS_PER_MINUTE=90
REDDIT_MAX_RETRIES=6
REDDIT_BACKOFF_BASE=2.0
REDDIT_MIN_REQUEST_INTERVAL_SECONDS=0.70
REDDIT_PROXY_URLS_CSV=
REDDIT_PROXY_ROTATION_MODE=round_robin
REDDIT_PROXY_FAILURE_COOLDOWN_SECONDS=180
REDDIT_PROXY_INCLUDE_DIRECT_FALLBACK=true
REDDIT_THREAD_LIMIT=500
REDDIT_THREAD_DEPTH=32
REDDIT_MORECHILDREN_CHUNK_SIZE=100
REDDIT_MORECHILDREN_MAX_BATCHES=0
PULL_SUBREDDIT_PAUSE_SECONDS=2.0

# Optional enrichments
ENABLE_EXTERNAL_EXTRACTION=false
EXTRACTION_TEXT_CAP=50000
DOWNLOAD_IMAGES=false
IMAGE_MAX_SIZE_BYTES=8000000

# Stance model
USE_FINBERT=false
UNCLEAR_THRESHOLD=0.55
UNCLEAR_SHORT_TEXT_LEN=20
INHERIT_PARENT_TICKERS_FOR_COMMENTS=false
INHERIT_TITLE_TICKERS_FOR_COMMENTS=false
ALLOW_CONTEXT_LABEL_INFERENCE=false
USE_DEPTH_DECAY=true
LAMBDA_DEPTH=0.15
USE_TIME_DECAY=false
LAMBDA_TIME=0.05

# Local resources
TICKER_MASTER_PATH=tickers_sample.csv
SYNONYMS_PATH=synonyms.json
STOPLIST_PATH=stoplist.json
EVALUATION_DATASET_PATH=gold_labels_sample.csv
EVALUATION_DEFAULT_MAX_ROWS=5000

# Frontend
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
